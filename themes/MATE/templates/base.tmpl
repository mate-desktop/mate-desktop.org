## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*" />
<%namespace name="bootstrap" file="bootstrap_helper.tmpl" import="*" />
<%namespace name="notes" file="annotation_helper.tmpl" import="*" />
${set_locale(lang)}
<!DOCTYPE html>
<html
%if comment_system == 'facebook':
xmlns:fb="http://ogp.me/ns/fb#"
%endif
lang="${lang}">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    ${bootstrap.html_head()}
    <%block name="extra_head">
    </%block>
    % if annotations and post and not post.meta('noannotations'):
        ${notes.css()}
    % elif not annotations and post and post.meta('annotations'):
        ${notes.css()}
    % endif
    ${extra_head_data}
</head>
<body style="padding-top: 10px;">
<!-- Menubar -->
<div class="container-fluid">
    <div class="navbar">
		<div class="navbar-inner">
			<div class="container">

				<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>

				<a class="brand" href="${abs_link('/')}">
				<img src="${blog_logo}" alt="${blog_title}" title="${blog_title}" />&nbsp;<small>${blog_title}</small/>
				</a>
				<!-- Everything you want hidden at 940px or less, place within here -->
				<div class="nav-collapse collapse">
					<ul class="nav">
                    ${bootstrap.html_navigation_links()}
                    <li class="dropdown">                      
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="/assets/img/icons/translate.png" alt="Language" title="Language"></a>                      
                      <ul class="dropdown-menu">
                        <li><a href="/"><img src="/assets/img/flags/32/United%20Kingdom(Great%20Britain).png" title="English" /></a></li>
                        <li><a href="/de/"><img src="/assets/img/flags/32/Germany.png" title="Deutsch" /></a></li>
                        <li><a href="/es/"><img src="/assets/img/flags/32/Spain.png" title="Español" /></a></li>
                        <li><a href="/fr/"><img src="/assets/img/flags/32/France.png" title="Francis" /></a></li>
                        <li><a href="/it/"><img src="/assets/img/flags/32/Italy.png" title="Italiano" /></a></li>
                        <li><a href="/nl/"><img src="/assets/img/flags/32/Netherlands.png" title="Nederlands" /></a></li>
                        <li><a href="/pl/"><img src="/assets/img/flags/32/Poland.png" title="Polski" /></a></li>
                        <li><a href="/tr/"><img src="/assets/img/flags/32/Turkey.png" title="Türkçe" /></a></li>
                      </ul>
                    </li>
					</ul>
                    
					<ul class="nav pull-right">
                        <!-- MATE social icons -->
                        ${social_icons}           
                        
                        <!-- Disable auto translation links         
                        <%block name="belowtitle">					
                        %if len(translations) > 1000:
                            <li>${base.html_translations()}</li>
                        %endif
                        </%block>
                        -->
                        
                        % if not hide_sourcelink:
                            <li><%block name="sourcelink"></%block></li>
                        %endif					
					</ul>
                    %if search_form:
						${search_form}
					%endif                    
				</div>
			</div>
		</div>
    </div>
</div>
<!-- End of Menubar -->

%if search_results:
	${search_results}
%endif

<div class="container-fluid" id="container-fluid">
    <!--Body content-->
    <div class="row-fluid">
    	<div class="span2"></div>
    	<div class="span8">
    		<%block name="content"></%block>
    	</div>
    </div>
    <!--End of body content-->
</div>

<hr />
<div class="footerbox">
    ${content_footer}
</div>

${base.html_social()}
${bootstrap.late_load_js()}
    <script type="text/javascript">jQuery("a.image-reference").colorbox({rel:"gal",maxWidth:"100%",maxHeight:"100%",scalePhotos:true});
    $(window).on('hashchange', function(){
        if (location.hash && $(location.hash)[0]) {
            $('body').animate({scrollTop: $(location.hash).offset().top - $('#navbar').outerHeight(true)*1.2 }, 1);
        }
    });
    $(document).ready(function(){$(window).trigger('hashchange')});
    </script>
    <%block name="extra_js"></%block>
    % if annotations and post and not post.meta('noannotations'):
        ${notes.code()}
    % elif not annotations and post and post.meta('annotations'):
        ${notes.code()}
    % endif
    ${body_end}
</body>
